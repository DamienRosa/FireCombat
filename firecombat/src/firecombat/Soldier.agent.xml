<?xml version="1.0" encoding="UTF-8"?>
<!--
  <H3>Soldier Agent.</H3>

  It runs in the environment to extinguish the fire 
  according to the orders of the ComanderAgent.
-->
<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex
	                    http://jadex.sourceforge.net/jadex-bdi-2.2.xsd"
	name="Soldier"
	package="firecombat">

	<imports>
		<import>jadex.commons.future.*</import>
		<import>jadex.base.contextservice.*</import>
		<import>jadex.base.appdescriptor.*</import>
		<import>jadex.extension.envsupport.environment.space2d.*</import>
		<import>jadex.extension.envsupport.environment.*</import>
		<import>jadex.extension.envsupport.math.*</import>
		<import>jadex.bridge.IContextService</import>
		<import>java.util.Arrays</import>
	</imports>
	
	<beliefs>
		<!-- Environment. -->
		<belief name="env" class="Grid2D">
			<fact class="IFuture">
				$scope.getParentAccess().getExtension("myfc2dspace")
			</fact>
		</belief>
			
		<!-- Myself. -->
		<belief name="myself" class="ISpaceObject">
			<fact>
				$beliefbase.env.getAvatar($scope.getComponentDescription(), $scope.getAgentModel().getFullName())
			</fact>
		</belief>
	
		<!-- The actual position on the grid world. -->
		<belief name="position" class="IVector2" evaluationmode="push">
			<fact language="jcl">
				$beliefbase.myself.position
				//$beliefbase.myself.getProperty("position")
			</fact>
		</belief>
		
		<!-- The fire at its current position. -->
		<beliefset name="fire_position" class="ISpaceObject"/>
		
		<beliefset name="fire_intensity" class="ISpaceObject"/>
		
		<belief name="is_burning" class="boolean" evaluationmode="push">
			<fact language="jcl">
				$beliefbase.fire_position.length>0
				$beliefbase.fire_intensity.length>0
			</fact>
		</belief>
		
		<belief name="is_putting_out" class="boolean" evaluationmode="push">
 			<fact language="jcl">
 				$beliefbase.myself.fire_position!=null
  				//$beliefbase.myself.getProperty("is_burning")
			</fact>
		</belief>
	</beliefs>

	<goals>
		<!-- Goal for putting out the fire -->
		<achievegoal name="extinguish_fire">
			<parameter name="fire" class="ISpaceObject">
				<value>$fire</value>
			</parameter>
			<unique/>
			<creationcondition language="jcl">
				ISpaceObject $fire &amp;&amp; Arrays.asList($beliefbase.fire_position).contains($fire)
			</creationcondition>
			<deliberation cardinality="1"/>
		</achievegoal>

		<!-- Goal for going to a specified position. -->
		<achievegoal name="go">
			<parameter name="position" class="IVector2"/>
		</achievegoal>
	</goals>

	<plans>
		<!-- Plan for putting out the fire. -->
		<plan name="extinguish_plan">
			<body class="ExtinguishPlanEnv"/>
			<trigger>
				<goal ref="extinguish_fire"/>
			</trigger>
		</plan>
	</plans>
</agent>